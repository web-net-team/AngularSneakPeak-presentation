web-slide#helloworld
	div.flex
		div(style="margin: 0 20px;")
			p(style="text-align: left; margin-bottom: 0px; margin-top: 40px;", data-enter="1") Selector
			pre(is="lang-markup", theme="dark", style="margin-top: 0px;", data-enter="1") 
				= '<my-app></my-app>'
				
			p(style="text-align: left; margin-bottom: 0px; margin-top: 40px;", data-enter="2") Template
			pre(is="lang-markup", theme="dark", style="margin-top: 0px;", data-enter="2") 
				= '<h1>Hello {{ name }}</h1>'
			
			p(style="text-align: left; margin-bottom: 0px; margin-top: 40px;", data-enter="3") Javascript	
			pre(is="lang-javascript", theme="dark", style="margin-top: 0px;", data-enter="3"). 
				this.name = 'Alice';
				
		div(style="margin: 0 20px;", data-enter="4")
			pre(is="lang-javascript", theme="dark").
				@Component({
					selector: 'my-app'
				})
				@View({
					template: '&lt;h1&gt;Hello {{ name }}&lt;/h1&gt;'
				})
				// Component controller
				class MyAppComponent {
					name: string;
				
					constructor() {
						this.name = 'Alice';
					}
				}